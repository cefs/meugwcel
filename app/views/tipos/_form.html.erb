<%= form_for(@tipo,:html => {:class =>"well form-vertical"}) do |f| %>

  <% if @tipo.errors.any? %>
    <div class="alert alert-error">
      <h2><%= pluralize(@tipo.errors.count, t(:error)) %>:</h2>

      <ul>
      <% @tipo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :codigo %>
    <%= f.text_field :codigo %>
  </div>
  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>
  <div class="actions">
    <%= f.submit t(:submit),:class =>"btn btn-success" %> | <%= link_to t(:back), tipos_path, :class =>"btn btn" %>
  </div>
<% end %>
