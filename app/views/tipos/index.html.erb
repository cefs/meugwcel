<h1><%=t(:list_types)%></h1>

<table class="table">
  <tr>
    <th>Codigo</th>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tipos.each do |tipo| %>
  <tr>
    <td><%= tipo.codigo %></td>
    <td><%= tipo.nome %></td>
    <td><%= link_to t(:show), tipo,:class=>"btn btn-info" %></td>
    <td><%= link_to t(:edit), edit_tipo_path(tipo),:class=>"btn btn-warning" %></td>
    <td><%= link_to t(:destroy), tipo, confirm: 'Are you sure?', method: :delete,:class=>"btn btn-danger" %></td>
  </tr>
<% end %>
</table>

