<h1><%=t(:list_operators)%></h1>

<table class="table">
  <tr>
    <th>Código</th>
    <th>Nome</th>
    <th>Tipo</th>

    <th></th>
    <th>Ações</th>
    <th></th>
  </tr>

<% @operadoras.each do |operadora| %>
  <tr>
    <td><%= operadora.codigo %></td>
    <td><%= operadora.nome %></td>
    <td><%= operadora.tipo.nome unless operadora.tipo.nil? %></td>

    <td><%= link_to t(:show), operadora,:class=>"btn btn-info" %></td>
    <td><%= link_to t(:edit), edit_operadora_path(operadora),:class=>"btn btn-warning" %></td>
    <td><%= link_to t(:destroy), operadora, confirm: 'Are you sure?', method: :delete,:class=>"btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new), new_operadora_path,:class=>"btn btn-primary" %>
